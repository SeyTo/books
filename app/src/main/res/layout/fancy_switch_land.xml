<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clContainer"
    android:minWidth="32dp"
    android:minHeight="32dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_rectangle">

    <ImageView
        android:id="@+id/ivActionOn"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_settings"
        tools:tint="@color/colorBlue"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/ivActionOff"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_back_filled"
        app:layout_constraintTop_toTopOf="@+id/ibAction" app:layout_constraintEnd_toEndOf="@+id/ibAction"
        app:layout_constraintStart_toStartOf="@+id/ibAction"
        app:layout_constraintBottom_toBottomOf="@+id/ibAction"/>
    <ImageButton
        android:id="@+id/ibAction"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/rounded_rectangle"
        android:layout_marginTop="8dp"
        tools:src="@drawable/ic_menu_list"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>